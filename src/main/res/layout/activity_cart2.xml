<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartActivity2"
    android:background="@drawable/brown_gradinet">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/textView15"
                android:textColor="@color/orange"
                android:textSize="40sp"
                android:textStyle="bold"
                android:layout_marginStart="160dp"
                android:layout_marginTop="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    style="@android:style/Widget.Button"
                    android:layout_width="wrap_content"
                    android:id="@+id/btn1"
                    android:layout_weight="1"
                    android:layout_marginTop="30dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="Espersso"/>


                <androidx.appcompat.widget.AppCompatButton
                    style="@android:style/Widget.Button"
                    android:layout_width="wrap_content"
                    android:id="@+id/btn2"
                    android:layout_weight="1"
                    android:layout_marginTop="30dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/orange_bg"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="Cappoccino"/>

                <androidx.appcompat.widget.AppCompatButton
                    style="@android:style/Widget.Button"
                    android:layout_width="wrap_content"
                    android:id="@+id/btn3"
                    android:layout_weight="1"
                    android:layout_marginTop="30dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="Latte"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:layout_weight="1"
                    android:layout_marginTop="30dp"
                    app:srcCompat="@drawable/img_9" />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:layout_weight="1"
                    android:layout_marginTop="30dp"
                    app:srcCompat="@drawable/img_10" />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:layout_weight="1"
                    android:layout_marginTop="30dp"
                    app:srcCompat="@drawable/img_11" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="120dp"
                    android:layout_height="110dp"
                    android:text="\n       Espersso\n       with milk\n         $24.0"
                    android:layout_marginStart="24dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp"
                    android:textSize="15sp"
                    android:background="#50000000"
                    android:layout_margin="10dp"
                    android:drawableBottom="@drawable/baseline_add_circle_24"
                    android:drawablePadding="5dp"
                    />

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="120dp"
                    android:layout_height="110dp"
                    android:text="\n       Cappoccino\n         with milk\n            $24.0"
                    android:layout_marginStart="24dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp"
                    android:textSize="15sp"
                    android:background="#50000000"
                    android:layout_margin="10dp"
                    android:drawableBottom="@drawable/baseline_add_circle_24"
                    android:drawablePadding="5dp" />

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="120dp"
                    android:layout_height="110dp"
                    android:text="\n          Latte\n       with milk\n          $24.0"
                    android:layout_marginStart="24dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp"
                    android:textSize="15sp"
                    android:background="#50000000"
                    android:layout_margin="10dp"
                    android:drawableBottom="@drawable/baseline_remove_circle_24"
                    android:drawablePadding="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="159dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Promo code"
                    android:textColor="@color/orange"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/applytBtn"
                    style="@android:style/Widget.Button"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/orange_bg"
                    android:text="Apply"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="375dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Subtotal                          $27.30"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="375dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Delivery                          $1.00"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView31"
                    android:layout_width="375dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Total                               $33.60"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/apply1Btn"
                    style="@android:style/Widget.Button"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/orange_bg"
                    android:text="Checkout"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton9"
                    android:layout_width="48dp"
                    android:layout_height="78dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    app:srcCompat="@drawable/baseline_home_2" />

                <ImageButton
                    android:id="@+id/imageButton7"
                    android:layout_width="48dp"
                    android:layout_height="78dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    app:srcCompat="@drawable/baseline_favorite_2" />

                <ImageButton
                    android:id="@+id/imageButton8"
                    android:layout_width="48dp"
                    android:layout_height="78dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    app:srcCompat="@drawable/baseline_location_pin_24" />

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="48dp"
                    android:layout_height="78dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    app:srcCompat="@drawable/baseline_account_circle_2" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>